<UserControl x:Class="Utilizr.WPF.BusyCircle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Utilizr.WPF"
             xmlns:convertes="clr-namespace:Utilizr.WPF.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="120" 
             d:DesignWidth="120">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisiblityConverter"/>
    </UserControl.Resources>

    <Grid x:Name="LayoutRoot"
        Visibility="{Binding Path=IsBusy,
                               Converter={StaticResource BooleanToVisiblityConverter}}">

        <Viewbox Stretch="UniformToFill">
            <Canvas RenderTransformOrigin="0.5,0.5"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center" 
                    Width="120"
                    Height="120">
                <Canvas.Resources>
                    <Style TargetType="{x:Type Ellipse}">
                        <Setter Property="Width"
                                Value="20"/>
                        <Setter Property="Height"
                                Value="20"/>
                        <Setter Property="Stretch"
                                Value="Fill"/>
                        <Setter Property="Fill"
                                Value="{Binding Path=ForegroundBrush}"/>
                    </Style>
                </Canvas.Resources>
                <Canvas.RenderTransform>
                    <RotateTransform Angle="0" />
                </Canvas.RenderTransform>
                <Canvas.Style>
                    <Style TargetType="{x:Type Canvas}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Path=IsBusy}" 
                                         Value="True">
                                <DataTrigger.EnterActions>
                                    <BeginStoryboard Name="Storyboard_Rotate">
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.Angle"   
                                                             From="0"
                                                             To="360"
                                                             Duration="0:0:2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.EnterActions>
                                <DataTrigger.ExitActions>
                                    <StopStoryboard BeginStoryboardName="Storyboard_Rotate" />
                                </DataTrigger.ExitActions>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Canvas.Style>

                <Ellipse Opacity="1.0"
                         Canvas.Left="50"
                         Canvas.Top="0" />
                <Ellipse Opacity="0.9"
                         Canvas.Left="20.6107373853764"
                         Canvas.Top="9.54915028125262" />
                <Ellipse Opacity="0.8"
                         Canvas.Left="2.44717418524233" 
                         Canvas.Top="34.5491502812526" />
                <Ellipse Opacity="0.7"
                         Canvas.Left="2.44717418524232"
                         Canvas.Top="65.4508497187474" />
                <Ellipse Opacity="0.6" 
                         Canvas.Left="20.6107373853763"
                         Canvas.Top="90.4508497187474" />
                <Ellipse Opacity="0.5"
                         Canvas.Left="50" 
                         Canvas.Top="100" />
                <Ellipse Opacity="0.4" 
                         Canvas.Left="79.3892626146236" 
                         Canvas.Top="90.4508497187474" />
                <Ellipse Opacity="0.3" 
                         Canvas.Left="97.5528258147577"
                         Canvas.Top="65.4508497187474" />
                <Ellipse Opacity="0.2" 
                         Canvas.Left="97.5528258147577"
                         Canvas.Top="34.5491502812526" />
            </Canvas>
        </Viewbox>
    </Grid>
</UserControl>
