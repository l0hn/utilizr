    <UserControl.Resources>
        <Style x:Key="KeyboardFocusStyle">
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Rectangle Stroke="Orange" StrokeThickness="2"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>        
    </UserControl.Resources>

    <Grid x:Name="LayoutRoot"
          FocusVisualStyle="{Binding Source={StaticResource KeyboardFocusStyle}}">
        <Grid.Style>
            <Style TargetType="{x:Type Grid}">
                <Style.Triggers>
                    <Trigger Property="IsEnabled"
                             Value="False">
                        <Setter Property="Opacity"
                                Value="0.5"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Grid.Style>
        
        <Border x:Name="Border"/>

        <Ellipse Fill="{Binding Path=BackgroundHandle}"
                 StrokeThickness="0"
                 VerticalAlignment="Center"
                 x:Name="ToggleEllipse"
                 HorizontalAlignment="Left"/>
    </Grid>
</UserControl>
