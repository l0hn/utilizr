<UserControl x:Class="Utilizr.WPF.Controls.Toggle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Utilizr.WPF.Controls"
             mc:Ignorable="d"
             Focusable="True"
             IsTabStop="True"
             MinWidth="46"
             MinHeight="32"
             FocusVisualStyle="{x:Null}"
             x:Name="ToggleUserControlRoot">

    <Grid x:Name="LayoutRoot">
        <Grid.Style>
            <Style TargetType="{x:Type Grid}">
                <Style.Triggers>
                    <Trigger Property="IsEnabled"
                             Value="False">
                        <Setter Property="Opacity"
                                Value="0.5"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Grid.Style>

        <Border x:Name="HighlightBorder"
                Background="Transparent"
                BorderThickness="2">
            <Border.Style>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="BorderBrush"
                            Value="Transparent" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsKeyboardFocusWithin, ElementName=ToggleUserControlRoot}"
                                     Value="True">
                            <Setter Property="BorderBrush"
                                    Value="{Binding Path=DataContext.HighlightBorderBrush, ElementName=LayoutRoot}" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>

            <Grid>
                <Border x:Name="Border"
                        Margin="2"/>

                <Ellipse Fill="{Binding Path=BackgroundHandle}"
                         StrokeThickness="0"
                         VerticalAlignment="Center"
                         x:Name="ToggleEllipse"
                         HorizontalAlignment="Left" />
            </Grid>
        </Border>
    </Grid>
</UserControl>
