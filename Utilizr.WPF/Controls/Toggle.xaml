<UserControl x:Class="Utilizr.WPF.Controls.Toggle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Utilizr.WPF.Controls"
             mc:Ignorable="d" 
             MinWidth="38"
             MinHeight="24"
             Focusable="True"
             IsTabStop="True">

    <UserControl.Resources>
        <Style x:Key="KeyboardFocusStyle2">
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Rectangle Stroke="{StaticResource NavigationBarActiveBrush}" StrokeThickness="2" RadiusX="7" RadiusY="7"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>        
    </UserControl.Resources>

    <UserControl.FocusVisualStyle>
        <Style TargetType="{x:Type UserControl}"
               BasedOn="{StaticResource KeyboardFocusStyle2}"/>
    </UserControl.FocusVisualStyle>

    <Grid x:Name="LayoutRoot">
        <Grid.Style>
            <Style TargetType="{x:Type Grid}">
                <Style.Triggers>
                    <Trigger Property="IsEnabled"
                             Value="False">
                        <Setter Property="Opacity"
                                Value="0.5"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Grid.Style>

        <Border x:Name="Border"/>

        <Ellipse Fill="{Binding Path=BackgroundHandle}"
                 StrokeThickness="0"
                 VerticalAlignment="Center"
                 x:Name="ToggleEllipse"
                 HorizontalAlignment="Left"/>
    </Grid>
</UserControl>
